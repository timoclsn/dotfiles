#!/bin/bash
set -e

echo "Updating Claude Code..."
claude update

echo ""

PACKAGES=(
  "npm"
  "pnpm"
  "@antfu/ni"
  "npm-check-updates"
  "vercel"
  "yalc"
  "@sourcegraph/amp"
  "opencode-ai"
  "@openai/codex"
  "@google/gemini-cli"
  "@github/copilot"
)

echo "Updating global npm packages (${#PACKAGES[@]} total)..."

npm i -g "${PACKAGES[@]}"

echo ""
echo "Installed global packages:"
echo ""

npm list -g --depth=0

echo ""
echo "Updating Homebrew packages..."
brew upgrade

echo ""
echo "All updates complete!"
