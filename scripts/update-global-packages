#!/bin/bash
set -e

PACKAGES=(
  "npm"
  "pnpm"
  "@antfu/ni"
  "npm-check-updates"
  "@anthropic-ai/claude-code"
  "@sourcegraph/amp"
  "opencode-ai"
  "@openai/codex"
  "@google/gemini-cli"
  "@charmland/crush"
)

echo "Updating global npm packages (${#PACKAGES[@]} total)..."

npm i -g "${PACKAGES[@]}"

echo ""
echo "All packages updated successfully!"
echo ""
echo "Installed global packages:"
echo ""

npm list -g --depth=0
