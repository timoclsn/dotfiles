{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoupdate": false,
  "share": "disabled",
  "model": "anthropic/claude-sonnet-4-20250514",
  "small_model": "google/gemini-2.5-flash",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen2.5-coder:7b": {},
        "deepseek-r1:7b": {}
      }
    },
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "qwen/qwen3-8b": {
          "name": "Qwen3 8b (local)"
        }
      }
    },
    "openrouter": {
      "models": {
        "moonshotai/kimi-k2:free": {}
      }
    }
  },
  "agent": {
    "build": {
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-20250514"
    },
    "plan": {
      "mode": "primary",
      "model": "openai/gpt-5",
      "reasoningEffort": "high",
      "reasoningSummary": "auto",
      "textVerbosity": "low"
    },
    "think": {
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-20250514",
      "thinking": {
        "type": "enabled",
        "budgetTokens": 5000
      }
    },
    "reason": {
      "mode": "primary",
      "model": "openai/gpt-5",
      "reasoningEffort": "high",
      "reasoningSummary": "auto",
      "textVerbosity": "low"
    },
    "free": {
      "mode": "primary",
      "model": "github-copilot/gpt-5-mini"
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "git commit": "ask",
      "git push": "ask",
      "*": "allow"
    }
  },
  "keybinds": {
    "leader": "ctrl+a",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_last": "ctrl+z"
  },
  "mcp": {
    "playwright": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"]
    },
    "ddg-search": {
      "enabled": true,
      "type": "local",
      "command": ["uvx", "duckduckgo-mcp-server"]
    },
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "grep": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.grep.app/"
    },
    "ios-simulator": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "ios-simulator-mcp"]
    },
    "figma": {
      "enabled": false,
      "type": "remote",
      "url": "http://127.0.0.1:3845/sse"
    },
    "figma-framelink": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "figma-developer-mcp", "--stdio"],
      "environment": {
        "FIGMA_API_KEY": "{env:FIGMA_API_KEY}"
      }
    },
    "nx": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "nx-mcp", "~/Developer/steuerbot/frontend"]
    },
    "linear": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.linear.app/mcp"
    },
    "notion": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.notion.com/mcp"
    }
  }
}
