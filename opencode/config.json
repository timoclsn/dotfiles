{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoupdate": false,
  "autoshare": false,
  "model": "github-copilot/claude-sonnet-4",
  "keybinds": {
    "leader": "ctrl+a",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_last": "ctrl+z"
  },
  "mcp": {
    "playwright": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"]
    },
    "ios-simulator": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "ios-simulator-mcp"]
    },
    "figma": {
      "enabled": false,
      "type": "remote",
      "url": "http://127.0.0.1:3845/sse"
    },
    "package-version": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "mcp-package-version"]
    },
    "nx-frontend": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "nx-mcp",
        "/Users/timo/Developer/steuerbot/frontend"
      ]
    }
  }
}
