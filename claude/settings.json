{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/notify.ts",
            "async": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/format.ts"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun ~/.claude/hooks/statusline.ts"
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true
  },
  "promptSuggestionEnabled": false,
  "autoUpdatesChannel": "latest",
  "theme": "dark"
}
