{
  "autoUpdates": false,
  "preferredNotifChannel": "notifications_disabled",
  "theme": "dark",
  "enableAllProjectMcpServers": false,
  "permissions": {
    "allow": [],
    "deny": ["Bash(git commit)", "Bash(git push)"]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/notify.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  }
}
