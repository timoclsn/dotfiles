{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/notify.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -q '\\.ts$'; then nlx prettier --write \"$file_path\"; fi; }"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun ~/.claude/hooks/statusline.ts"
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true
  },
  "promptSuggestionEnabled": false,
  "theme": "dark",
  "autoUpdatesChannel": "stable",
  "minimumVersion": "2.1.5"
}
